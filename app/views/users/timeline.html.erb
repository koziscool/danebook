    <!-- Right Side Content -->
    <section class="right-content col-sm-7 col-sm-offset-1">
      <div class="post-row row">
        <div class="post-wrapper col-sm-12">
          <div class="post-header row">
            Post
          </div>

          <% if signed_in_user? %>
            <%= form_tag posts_path do %>
            <div class="text-area row">
              <%= text_area_tag :body, "", class: "form-control", placeholder: "Tell the world something.." %>
            </div>
            <footer class="post-footer panel-footer row">
              <%= submit_tag "Post", class: "btn navbar-right btn-primary" %>
            <% end %>
          <% end %>
          </footer><!-- End Post Footer -->
        </div><!-- End Post Wrapper -->
      </div><!-- End Post Area Container -->

      <!-- Comment Container -->
      <% @user.posts.each do |post| %>
      <div class="comment-row row">
        <!-- Comment Wrapper -->
        <div class="comment-wrapper col-sm-12">
          <!-- Comment-Header -->
          <div class="comment-header row">
            <img src="/assets/default_user.gif">
            <div class="profile-name">
              <%= link_to "#{@user.first_name} #{@user.last_name}", @user %>
              <span>Posted on <%= post.created_at %></span>
            </div>
          </div><!-- End Comment Header -->

          <div class="comment-content row">
            <%= post.body %>
          </div><!-- End Content Row -->

          <div class="comment-footer row">
            <div class="clearfix col-xs-12">
              <% if current_user.liked_resource?(post) %>
                <%= link_to "Unlike", post_like_path(post, current_user.id_of_like(post)), method: :delete, class: "pull-left" %>
              <% else %>
                <%= link_to "Like", post_likes_path(post), method: :post, class: "pull-left" %>
              <% end %>
              <span class="pull-left">
                <%= post.likes.count unless post.likes.empty? %>
              </span>
              <% if current_user %>
                <%= link_to "Delete", post_path(post), method: :delete, class: "pull-right" %>
              <% end %>

            </div>

            <div class="col-xs-12">
              <% post.likes.each do |like| %>
                <span><%= like.author.first_name %></span>
              <% end %>
            </div>
          </div><!-- End Comment Footer -->
          <div class="comments-post-container" data-post-id="<%= post.id %>" >
            <% post.comments.each do |comment| %>
              <%= render comment %>
            <% end %>
          </div>
          <div class="form-group row">
              <%= form_tag post_comments_path(post), { remote: true, :data => { :post_id => post.id } } do %>
                <%= hidden_field_tag "comment[commentable_id]", post.id %>
                <%= hidden_field_tag "comment[commentable_type]", "Post" %>
              <div class="col-xs-12">
                <%= text_area_tag "comment[body]", "", class: "form-control", placeholder: "Write a comment.." %>
              </div>
              <div class="col-xs-12">
                <%= submit_tag "Comment", class: "btn navbar-right btn-primary btn-sm" %>
              </div>
            <% end %>
          </div>
        </div><!-- End Comment Wrapper -->
      </div><!-- End Comment Container -->
      <% end %>
    </section>
